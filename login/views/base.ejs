<%-include('header')-%>
<div class="text-center center-div" id="login">
    <div class="container w-25 border py-5">
        <div class="title pb-5">
            <h2 class="font-weight-bold">Login System</h2>
            <span>Log In for Users</span>
        </div>
        <form action="#" >
            <div class="form-group">
                <input type="email" class="form-container rounded-pill" placeholder="email" name="email">
                <small class="form-text text-muted ">Register email Address</small>
            </div>
            <div class="form-group">
                <input type="password" class="form-container rounded-pill" placeholder="password" name="password">
                <small class="form-text text-muted">Password (minimum 6 characters)</small>
            </div>
            <button type="submit" class="btn btn-success rounded-pill">Submit</button>
        </form>
    </div>
</div>



<%-include('footer')-%>